.col-md-6.col-md-offset-3
	.row
		.panel.panel-default
			.panel-heading
				%h2 New Post
			.panel-body
			= simple_form_for @post do |f|
				.form-group
					=f.collection_select :category_id, Category.all, :id, :name, {promt: 'County running for'}, input_html: { class: 'form-control' }
				.form-group
					=f.input :image, input_html: { class: 'form-control' }
				.form-group
					=f.input :name, input_html: { class: 'form-control' }
				.form-group
					=f.input :breifHistory, input_html: { class: 'form-control' }
				.form-group
					=f.input :education, input_html: { class: 'form-control' }
				.form-group
					=f.input :achievments, input_html: { class: 'form-control' }
				.form-group
					=f.input :goals, input_html: { class: 'form-control' }

				.form-actions
					= f.button :submit, class: 'btn btn-primary'