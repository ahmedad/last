.row
	.box
		.col-lg-12.text-center
			#carousel-example-generic.carousel.slide
				%ol.carousel-indicators.hidden-xs
					%li.active{"data-slide-to" => "0", "data-target" => "#carousel-example-generic"}
					%li{"data-slide-to" => "1", "data-target" => "#carousel-example-generic"}
					%li{"data-slide-to" => "2", "data-target" => "#carousel-example-generic"}
				.carousel-inner
					.item.active
						.img-responsive.img-full
							= image_tag("voter.jpg")
						.container
							.carousel-caption
								%h1{:style => "color: green;"}
									YOUR CHOICE, YOUR FUTURE.
								%h2{:style => "padding-left: 2rem;"}
									You can read, comment, upvote or downvote and share your favorite candidate's profile on socail media.
								= link_to "Sign Up Today", new_user_registration_path, class: 'btn btn-primary'

					.item
						.img-responsive.img-full
							= image_tag("election2.jpg")
						.container
							.carousel-caption
								%h1{:style => "color: green;"}
									YOUR VOTE COUNTS.
								%h2{:style => "padding-left: 2rem;"}
									You can interact with all the candidates of 2017 election, So sign up now.
								= link_to "About us", about_index_path, class: 'btn btn-primary'

					.item
						.img-responsive.img-full
							= image_tag("somv.jpg")
						.container
							.carousel-caption
								%h1{:style => "color: green;"}
									CHOOSE RIGHT TO VOTE SMART.
								%h2{:style => "padding-left: 2rem;"}
									You can sign up for free and for  candidates please share with us your profile.
								= link_to "Sign Up Today", new_user_registration_path, class: 'btn btn-primary'
				/ Controls
				%a.left.carousel-control{"data-slide" => "prev", :href => "#carousel-example-generic"}
					%span.icon-prev
				%a.right.carousel-control{"data-slide" => "next", :href => "#carousel-example-generic"}
					%span.icon-next


- if user_signed_in?
	%p#intro 
		Hello
		= current_user.name
		%br
		%span
			To upload your profile email us "arteppal@gmail.com"!
	#intro
		.row
			.col-md-4.col-md-offset-4{:style => "padding-left: 2rem;"}
				%h3{:style => "margin-top: 0; font-size: 2.3rem;"} Search Candidate's name
				= form_tag search_posts_path, method: :get, class: "navbar-form", role: "search" do
					%p
						= text_field_tag :search, params[:search], class: "form-control"
						= submit_tag "Search", name: nil, class: "btn btn-default"
- else
	%p#intro
		Sign up and share your opinion
		%br
		%span
			To upload your profile email us "arteppal@gmail.com"!
	#intro
		.row
			.col-md-4.col-md-offset-4{:style => "padding-left: 2rem;"}
				%h3{:style => "margin-top: 0; font-size: 2.3rem;"} Search Candidate's name
				= form_tag search_posts_path, method: :get, class: "navbar-form", role: "search" do
					%p
						= text_field_tag :search, params[:search], class: "form-control"
						= submit_tag "Search", name: nil, class: "btn btn-default"
.container
	%ul.nav.navbar-nav
		- Seat.all.each do |seat|
			%li= link_to seat.name, posts_path(seat: seat.name)
.row
	.col-sm-9
		#posts.transitions-enabled
			- @posts.each do |post|
				.box.post
					.post_image
						= link_to (image_tag post.image.url(:small)), post
					.post_content
						.title
							%h2= post.name
						.data.clearfix
							%p.username
								= post.position
							%p.buttons
								%span
									%i.fa.fa-comments-o
									= post.comments.count
								%span
									%i.fa.fa-thumbs-o-up
									= post.get_likes.size
								%span
									%i.fa.fa-thumbs-o-down
									= post.get_dislikes.size
	.col-sm-3
		%h1 Our Services
		%hr
		%h3 Campaign Websites
		%h3 Social Media Marketing
		%hr
		.row
			.col-sm-4
				.btn-group
					%button.btn.btn-primary
						%em.fa.fa-fw.fa-facebook-f
			.col-sm-4
				.btn-group
					%button.btn.btn-info
						%em.fa.fa-fw.fa-twitter
			.col-sm-4
				.btn-group
					%button.btn.btn-warning
						%em.fa.fa-fw.fa-instagram
		%hr
			