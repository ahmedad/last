#posts.transitions-enabled.infinite-scroll.clearfix
	- @posts.each do |post|
		.post
			.post_image{:style => "height: 23rem;"}
				= link_to (image_tag post.image.url(:small)), post
			.post_content
				.title
					%h2= post.name
				.data.clearfix
					%p.username
						Running for
						= post.position
					%p.buttons
						%span
							%i.fa.fa-comments-o
							= post.comments.count
						%span
							%i.fa.fa-thumbs-o-up
							= post.get_likes.size
						%span
							%i.fa.fa-thumbs-o-down
							= post.get_dislikes.size

	