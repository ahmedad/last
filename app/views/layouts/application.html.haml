!!!
%html
%head
  %title Your | Choice
  = csrf_meta_tags
  :javascript
  (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
  (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
  m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
  })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');
  
  ga('create', 'UA-90184660-1', 'auto');
  ga('send', 'pageview');

  = stylesheet_link_tag    'application', media: 'all'
  = javascript_include_tag 'application'
  %link{:rel => "stylesheet", :href => "https://cdnjs.cloudflare.com/ajax/libs/normalize/5.0.0/normalize.min.css"}
  %link{:rel => "stylesheet", :href => "https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css"}

%body
  %nav.navbar.navbar-default
    .container{:style => "width: 90%;"}
      .navbar-brand
        = link_to "Future choice", root_path 
      - if user_signed_in?
        %ul.nav.navbar-nav.navbar-right
          %li= link_to "Sign Out", destroy_user_session_path, method: :delete, class: 'btn btn-default'
          %li= link_to "About us", about_index_path, class: 'btn btn-default'
          - if current_user.admin?
            %li= link_to "New Post", new_post_path, class: 'btn btn-default'
          
        / %ul.nav.navbar-nav.navbar-right
        /   .dropdown
        /     %button#dropdownMenu1.btn.btn-default.dropdown-toggle{"aria-expanded" => "true", "aria-haspopup" => "true", "data-toggle" => "dropdown", :type => "button"} Check your county
        /     / %span.caret
        /     %ul.dropdown-menu{"aria-labelledby" => "dropdownMenu"}
        /       - Category.all.each do |category|
        /         %li= link_to category.name, posts_path(category: category.name)
            
      - else
        %ul.nav.navbar-nav.navbar-right 
          %li= link_to "Sign In", new_user_session_path, class: 'btn btn-default'
          %li= link_to "Sign Up", new_user_registration_path, class: 'btn btn-default'
          %li= link_to "About us", about_index_path, class: 'btn btn-default'
          
        / %ul.nav.navbar-nav.navbar-right
        /   .dropdown
        /     %button#dropdownMenu1.btn.btn-default.dropdown-toggle{"aria-expanded" => "true", "aria-haspopup" => "true", "data-toggle" => "dropdown", :type => "button"} Check your county
        /     / %span.caret
        /     %ul.dropdown-menu{"aria-labelledby" => "dropdownMenu"}
        /       - Category.all.each do |category|
        /         %li= link_to category.name, posts_path(category: category.name)
  %p= notice
  %p= alert
  .wrapper
    = yield
